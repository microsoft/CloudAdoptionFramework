{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentPrefix": {
            "type": "string",
            "metadata": {
                "displayName": "Deployment prefix",
                "description": "Provide a prefix (unique at tenant-scope) for subscription resources created as part of this deploy."
            },
            "defaultValue": "contoso-sharedsvcs"
        },
        "objectId": {
            "type": "string",
            "metadata": {
                "description": "Specifies the object ID of a user, service principal or security group in the Azure Active Directory tenant to grant permissions in Key Vault."
            }
        }
    },
    "variables": {
        "keyVaultName": "[concat('kv-', parameters('deploymentPrefix'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[variables('keyVaultName')]",
            "apiVersion": "2021-04-01-preview",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "KeyVault"
            },
            "properties": {
                "enabledForDeployment": true,
                "enabledForDiskEncryption": true,
                "enabledForTemplateDeployment": true,
                "tenantId": "[subscription().tenantId]",
                "sku": {
                    "name": "premium",
                    "family": "A"
                },
                "enableSoftDelete": false,
                "networkAcls": {
                    "defaultAction": "Allow",
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": []
                },
                "accessPolicies": [
                    {
                        "objectId": "[parameters('objectId')]",
                        "tenantId": "[subscription().tenantId]",
                        "permissions": {
                            "keys": [
                                "get",
                                "list",
                                "update",
                                "create",
                                "import",
                                "delete",
                                "recover",
                                "backup",
                                "restore"
                            ],
                            "secrets": [
                                "get",
                                "list",
                                "set",
                                "delete",
                                "recover",
                                "backup",
                                "restore"
                            ],
                            "certificates": [
                                "get",
                                "list",
                                "update",
                                "create",
                                "import",
                                "delete",
                                "recover",
                                "deleteissuers",
                                "recover",
                                "managecontacts",
                                "manageissuers",
                                "getissuers",
                                "listissuers",
                                "setissuers"
                            ]
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Authorization/locks",
            "apiVersion": "2016-09-01",
            "name": "keyVaultDoNotDelete",
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
            ],
            "scope": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]",
            "properties": {
                "level": "CanNotDelete",
                "notes": "Prevent deletion of the key vault"
            }
        }
    ],
    "outputs": {
        "keyVaultId": {
            "type": "string",
            "value": "[resourceId('Microsoft.KeyVault/vaults', variables('keyVaultName'))]"
        }
    }
}
